
<%= form_tag side_contents_save_path, remote: true  do |f| %>

  <%= hidden_field_tag(:project_id, @project.id) %>

  <div>
    <h2><%= l(:side_contents_label_common) %></h2>
    <%= text_area_tag(:common_text, @common_text, style: 'width:100%;height:200px') %>
  </div>

  <div style='margin-top:10px;'>
    <h2><%= l(:side_contents_label_project) %></h2>
    <%= text_area_tag(:project_text, @project_text, style: 'width:100%;height:200px') %>
  </div>

  <div style="margin-top:10px;">
    <%= submit_tag l(:side_contents_label_submit) %>
  </div>

<% end %> 
